
<% if !@result.length.zero?%>
<div class="container">
    <h1>Результаты вычислений</h1>
<table class="table table-striped">
  <thead>
  <th scope="col">№</th>
  <th scope="col">Последовательность</th>
  </thead>
  <tbody>
  <% @result.each_with_index do |elem, index| %>
  <tr>
    <th scope="row"><%= index+1 %></th>
    <td><%= elem %></td>
  </tr>
  <% end %>
  </tbody>
</table>
<% else %>
<h1>Последовательностей не найдено</h1>
<% end %>

<%= form_tag('/calculator/input', :method => 'get') do %>
    <%= submit_tag('Назад', class: 'btn btn-primary') %>
<% end %>
</div>
